meta {
  name: Create a password
  type: http
  seq: 12
}

post {
  url: {{baseUrl}}/api/persons/{{personId}}/password
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "password": "{{password}}"
  }
}

docs {
  Create a person's password. A password is required for actions that require additional authorisation, such as creating a beneficiary.
}
